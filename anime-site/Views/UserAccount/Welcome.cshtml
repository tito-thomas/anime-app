@model anime_site.Models.NewQuestions
@{
    ViewBag.Title = "Welcome";
}
<head>
    <title>@ViewBag.Title</title>
    @section Scripts {
        <script type="module" src="~/Scripts/movement.js"></script>
        <script type="module" src="~/Scripts/questions.js"></script>
    }
</head>
<body>
    <container class="dash-veil">
        <div class="dash">
            @*<h2>@ViewBag.Title</h2>*@

            <h3>Welcome, @User.Identity.Name</h3>

        </div>

        <div class="questions">
            @using (Html.BeginForm("Welcome", "UserAccount", FormMethod.Post, new { id = "qform" }))
            {
            
                <div class="all-questions">
                    <div class="question-group">
                        <div class="intro-text" id="welcome">
                            @ViewBag.Welcome1<br /><br /><br />
                            @ViewBag.Welcome2
                            <div class="qsubmit  next-button" id="continue">Continue</div>
                        </div>

                    </div>
                    <div class="question-group" id="group1">
                        <h2>How often do you watch anime?</h2>
                        <div class="button-container">
                            <button type="button" class="qbuttons" value="Newbie">I am completely new to anime</button>
                            <button type="button" class="qbuttons" value="Regular">I have seen it before but not too familiar</button>
                            <button type="button" class="qbuttons" value="Active">I watch regularly</button>
                            <button type="button" class="qbuttons" value="Veteran">I'm addicted to anime</button>
                            <input type="hidden" name="v1" id="v1" value="" />
                        </div>
                    </div>

                    <div class="question-group" id="group2">
                        <h2>What is your gender?</h2>
                        <div class="button-container">
                            <button type="button" class="qbuttons" value="Male">Male</button>
                            <button type="button" class="qbuttons" value="Female">Female</button>
                            <button type="button" class="qbuttons" value="Non-Binary">Non-Binary</button>
                            <input type="hidden" name="v2" id="v2" value="" />
                        </div>
                    </div>

                    <div class="question-group" id="group3">
                        <h2>Which generation do you belong to?</h2>
                        <div class="button-container">
                            <button type="button" class="qbuttons" value="Gen-Alpha">Gen-Aplha (10 or younger)</button>
                            <button type="button" class="qbuttons" value="Gen-Z">Gen-Z (11-28)</button>
                            <button type="button" class="qbuttons" value="Millenials">Millenials (29-43)</button>
                            <button type="button" class="qbuttons" value="Gen-X">Gen X (44-58)</button>
                            <input type="hidden" name="v3" id="v3" value="" />
                        </div>
                    </div>

                    <div class="question-group" id="group4">
                        <h2>Please pick your three favourite genres of Movie/TV shows</h2>
                        <div class="genre-container">
                            <button type="button" class="genre-buttons" value="Action">Action</button>
                            <button type="button" class="genre-buttons" value="Adventure,Shounen">Adventure</button>
                            <button type="button" class="genre-buttons" value="Comedy">Comedy</button>
                            <button type="button" class="genre-buttons" value="Kids">Family</button>
                            <button type="button" class="genre-buttons" value="Sci-Fi,Supernatural">Sci-Fi</button>
                            <button type="button" class="genre-buttons" value="Fantasy,Magic">Fantasy</button>
                            <button type="button" class="genre-buttons" value="Drama,Slice of Life">Drama</button>
                            <button type="button" class="genre-buttons" value="Romance">Romance</button>
                            <button type="button" class="genre-buttons" value="Horror">Horror</button>
                            <button type="button" class="genre-buttons" value="Thriller">Thriller</button>
                            <button type="button" class="genre-buttons" value="Sports">Sports</button>
                            <button type="button" class="genre-buttons" value="Music">Music</button>
                            <button type="button" class="genre-buttons" value="Psychological">Psychological</button>

                            <input type="hidden" name="v4" id="v4" value="" />
                        </div>
                    </div>

                    <div class="question-group" id="group5">
                        <h2>Do you prefer to watch older or newer content?</h2>
                        <div class="button-container">
                            <button type="button" class="qbuttons" value="New-Gen">Newer</button>
                            <button type="button" class="qbuttons" value="Classic">Older</button>
                            <input type="hidden" name="v5" id="v5" value="" />
                            <input type="submit" class="qsubmit" />
                        </div>

                    </div>

                </div>
                <img src="@Url.Content("/Content/Assets/next.svg")" id="next-button" class="next-button" />
                <img src="@Url.Content("/Content/Assets/next.svg")" id="back-button" />

            }
        </div>
    </container>
</body>